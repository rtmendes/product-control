# ========================================
# PRODUCT CONTROL - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE
# ========================================
DATABASE_URL="postgresql://user:password@localhost:5432/productcontrol"

# ========================================
# AUTHENTICATION (Clerk)
# ========================================
# Get these from: https://clerk.com
VITE_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..."

# ========================================
# AI SERVICES
# ========================================
# OpenAI (for GPT-4, DALL-E, etc.)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Anthropic Claude (optional, for advanced reasoning)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-..."

# ========================================
# PERSISTENT KNOWLEDGE BASE (MCP)
# ========================================
# Option 1: Den.io (Recommended)
# Get from: https://getden.io/
MCP_PROVIDER="den"
MCP_ENDPOINT="https://api.getden.io"
MCP_API_KEY="den_..."

# Option 2: Picos (Alternative)
# MCP_PROVIDER="picos"
# MCP_ENDPOINT="https://api.picos.io"
# MCP_API_KEY="picos_..."

# ========================================
# SHOPIFY INTEGRATION
# ========================================
# Create a Custom App in Shopify Admin:
# Settings → Apps and sales channels → Develop apps
SHOPIFY_API_KEY="..."
SHOPIFY_API_SECRET="..."
SHOPIFY_SCOPES="read_products,write_products,read_orders,read_customers"
SHOPIFY_APP_URL="https://your-app-url.com"
SHOPIFY_REDIRECT_URI="https://your-app-url.com/api/auth/shopify/callback"

# ========================================
# KLAVIYO (EMAIL AUTOMATION)
# ========================================
# Get from: Klaviyo Account → Settings → API Keys
KLAVIYO_PUBLIC_API_KEY="..."
KLAVIYO_PRIVATE_API_KEY="pk_..."

# ========================================
# EAGLE APP (ASSET MANAGEMENT)
# ========================================
# Enable API in Eagle: Preferences → Advanced → Enable API
EAGLE_API_URL="http://localhost:41595"
EAGLE_LIBRARY_PATH="/path/to/eagle/library"

# ========================================
# AIRTABLE (METADATA STORAGE)
# ========================================
# Get from: Airtable Account → API → Generate API key
AIRTABLE_API_KEY="key..."
AIRTABLE_BASE_ID="app..."
AIRTABLE_TABLE_NAME="Assets"

# ========================================
# AWS S3 (ASSET STORAGE)
# ========================================
# Create IAM user with S3 access
AWS_ACCESS_KEY_ID="AKIA..."
AWS_SECRET_ACCESS_KEY="..."
AWS_S3_BUCKET="product-control-assets"
AWS_REGION="us-east-1"

# ========================================
# REDIS (JOB QUEUES)
# ========================================
# Local Redis or cloud service (e.g., Redis Labs, Upstash)
REDIS_URL="redis://localhost:6379"
# Or for Upstash: redis://default:password@host:port

# ========================================
# OTHER INTEGRATIONS
# ========================================
# One Click Upsell (OCU)
OCU_API_KEY="..."

# Growify (Attribution)
GROWIFY_TRACKING_ID="..."

# Leverage (Analytics)
LEVERAGE_API_KEY="..."

# Search Atlas (SEO)
SEARCH_ATLAS_API_KEY="..."

# Falcon Pro Theme
FALCON_PRO_THEME_ID="..."

# ========================================
# AD PLATFORMS
# ========================================
# Facebook/Meta Ads
FACEBOOK_APP_ID="..."
FACEBOOK_APP_SECRET="..."
FACEBOOK_ACCESS_TOKEN="..."

# Google Ads
GOOGLE_ADS_CLIENT_ID="..."
GOOGLE_ADS_CLIENT_SECRET="..."
GOOGLE_ADS_DEVELOPER_TOKEN="..."

# TikTok Ads
TIKTOK_APP_ID="..."
TIKTOK_APP_SECRET="..."

# ========================================
# STRIPE (PAYMENTS - OPTIONAL)
# ========================================
# If you want to monetize this app
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ========================================
# APPLICATION CONFIGURATION
# ========================================
NODE_ENV="development"
PORT=3000
VITE_API_URL="http://localhost:3000"

# Session secret for JWT
SESSION_SECRET="your-random-secret-here-change-me"

# Encryption key for sensitive data
ENCRYPTION_KEY="your-encryption-key-32-chars-long"

# ========================================
# FEATURE FLAGS (OPTIONAL)
# ========================================
ENABLE_AI_AGENTS="true"
ENABLE_MCP_SYNC="true"
ENABLE_BACKGROUND_JOBS="true"
ENABLE_ANALYTICS="true"

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# LOGGING
# ========================================
LOG_LEVEL="info"
LOG_FORMAT="json"

# ========================================
# NOTES FOR BOLT.NEW / EZSITE / MANUS.AI
# ========================================
# These platforms will automatically:
# 1. Read this file
# 2. Prompt you to fill in values
# 3. Set up environment variables
# 4. Deploy the application
#
# You only need to provide the API keys for services you want to use.
# Minimum required for basic functionality:
# - DATABASE_URL
# - CLERK keys
# - OPENAI_API_KEY
# - MCP credentials
